{
  "name": "project",
  "version": "1.0.0",
  "description": "https://dev.to/franciscomendes10866/how-to-setup-a-node-api-with-swc-and-eslint-1h5d | https://amanhimself.dev/blog/setup-nextjs-project-with-eslint-prettier-husky-lint-staged/",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "prepare": "cd .. && husky install project/.husky",
    "lint-staged": "lint-staged",
    "test": "bash run-test",
    "show-report": "npx playwright show-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb": "^4.13.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.1",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@types/express": "^4.17.15",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
